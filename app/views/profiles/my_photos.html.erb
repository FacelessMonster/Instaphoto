<div class="card-columns">
      <% @photos.each do |photo| %>
      <div class="card photo-card">
        <div class="card-body">
          <%= image_tag photo.image.url(:medium), class: "index-incard-image" %><br/><br/>
          <div><b><%= photo.description %></b></div><br/>
          <%= link_to 'Show', photo %>
          | <%= link_to 'Edit', edit_photo_path(photo) %> |
          <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
      <% end %>
    </div><br/>
<%= will_paginate @photos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>