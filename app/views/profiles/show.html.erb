<div class="container">
  <div><%=@profile.email%>
  <% if current_user.id != @profile.id%>
    <% if current_user.subscriptions.find_by_friend_id(@profile.id).nil?%>
    <%= link_to "Subscribe", subscribe_path%>
    <% else %>
    <%= link_to "Unsubscribe", unsubscribe_path%>
    <% end %>
  <% end %>
  </div>
    <div class="card-columns">
      <% @profile.photos.each do |photo| %>
      <div class="card photo-card">
        <div class="card-body">
          <%= image_tag photo.image.url(:medium), class: "index-incard-image" %><br/><br/>
          <div><b><%= photo.description %></b></div><br/>
          <%= link_to 'Show', photo %>
            <% if photo.user == current_user %>
              | <%= link_to 'Edit', edit_photo_path(photo) %> |
              <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </div>
      </div>
      <% end %>
    </div>
  <%= link_to "Back", photos_path%>
</div>